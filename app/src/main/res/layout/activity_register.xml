<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <com.khemsharma.yourdoctor.AppUttils.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="All Chats"
        android:textColor="@color/white"

        android:textSize="@dimen/title_size"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_gap"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp"

        >

        <Button
            android:id="@+id/loginG"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="#ff7f7f"
            android:drawableLeft="@drawable/ic_google_plus"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="Login with Google"
            android:textColor="@color/white"

            />

        <Button
            android:id="@+id/loginF"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#3a58ff"
            android:drawableLeft="@drawable/ic_google_plus"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="Login with Facebook"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/loginT"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="#3B5998"
            android:drawableLeft="@drawable/ic_facebook"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="Login with Twitter"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>