<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/user_list_main_layout"
    android:layout_margin="@dimen/default_gap"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:clickable="false"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"


        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_profile_image"
                android:id="@+id/user_profile_image"

                />
            <com.khemsharma.yourdoctor.AppUttils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"
                android:layout_toRightOf="@id/user_profile_image"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:padding="@dimen/default_chat_padding"
                android:id="@+id/user_name"
                />


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/line"
            />


    </LinearLayout>


</androidx.cardview.widget.CardView>